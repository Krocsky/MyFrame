@model IEnumerable<Permission>
@{
    Role role = ViewData.Get<Role>("role", null);
    var permissions = role.Permissions.Select(n => n.PermissionId);
}
<div class="form-group" style="height:120px;overflow:auto; ">
    <label class="col-sm-3 control-label"></label>
    <div class="col-sm-8 input-group">
        @if (Model.Count() > 0)
        {
            foreach (var permission in Model)
            {
                <div class="checkbox i-checks">
                    <label class="">
                        <input type="checkbox" name="permissionIds" value="@permission.Id" @if (permissions.Contains(permission.Id)) { <text> checked="checked" </text>   }> @permission.Name
                    </label>
                </div>
            }
        }
        else
        {
            <label class="control-label">没有匹配的权限</label>
        }
    </div>
</div>
<script type="text/javascript">
    $(".i-checks").iCheck({ checkboxClass: "icheckbox_square-green", radioClass: "iradio_square-green", })
</script>
