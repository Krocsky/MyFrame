@model SettingEditModel
@{
    string title = Model.Id > 0 ? "编辑设置" : "添加设置";
}
<style>
    .ibox-content {
        background-color: #fff;
        color: inherit;
        padding: 15px 20px 20px;
        border-color: #fff;
        -webkit-border-image: none;
        -o-border-image: none;
        border-image: none;
        border-style: solid solid none;
        border-width: 1px 0;
    }
</style>
<div class="ibox-content">
    @using (Ajax.BeginForm("EditSetting", "Setting", null, new AjaxOptions { OnSuccess = "OnSuccessCallBack" }, new { @class = "form-horizontal", id = "editSettingForm" }))
    {
        <div class="box-body">
            @Html.HiddenFor(n => n.Id)
            <div class="form-group">
                @Html.LabelFor(n => n.Name, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(n => n.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.Name)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Code, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(n => n.Code, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.Code)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(n => n.Number, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(n => n.Number, new { @class = "form-control" })
                    @Html.ValidationMessageFor(n => n.Number)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <center>
                    <button type="submit" class="btn btn-primary btn-sm center-align">提交</button>
                    <button type="button" class="btn btn-default btn-sm center-align" cancel>取消</button>
                </center>
            </div>
        </div>
    }
</div>
<script type="text/javascript">
    window.title = "@title";
</script>